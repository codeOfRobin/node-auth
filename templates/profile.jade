html
    head
        title Node auth
        link(href='/static/css/bootstrap.min.css', rel='stylesheet')
        link(href='/static/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        style.
            body 
            {
                padding-top:80px;
            }
    body
        .container
            .page-header.text-center
                h1
                    span.fa.fa-anchor
                    | Profile Page
                a(href="/logout").btn.btn-default.btn-sm Logout
            
            .row
                .col-sm-6
                    .well
                        h3.text-primary
                            span.fa.fa-facebook
                            |Facebook
                        p
                            strong id:
                            |#{user.facebook.id}
                            br
                            strong token:
                            |#{user.facebook.token}
                            br
                            strong email:
                            |#{user.facebook.email}
                            br
                            strong name:
                            |#{user.facebook.name}
                            br
                            
